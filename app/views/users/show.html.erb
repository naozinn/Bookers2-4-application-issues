<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <% if @book.errors.any? %>
       <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
       <% @book.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
      <% end %>

      <div class="profile-container">
         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
           <tbody>
            <tr>
              <th>name</th>
              <th class = "profile-name"><%= @user.name %></th>
            </tr>
           <tr>
              <th>introduction</th>
              <th class = "profile-introduction"><%= @user.introduction %></th>
            </tr>
           </tbody>
        </table>
          <div class="row">
            <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas ' do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
      </div>
      <h2>New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
    </div>
      <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, size:"40x40", fallback: "no_image.jpg"%>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
